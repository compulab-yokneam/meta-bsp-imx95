From: Valentin Raevsky <valentin@compulab.co.il>
Date: Mon, 11 Nov 2024 11:53:30 +0200
Subject: [PATCH 6/7] debug: ucm-imx95: dts: Fix lvds panel support

Signed-off-by: Valentin Raevsky <valentin@compulab.co.il>
---
 arch/arm64/boot/dts/compulab/ucm-imx95.dts | 40 ++++------------------
 1 file changed, 6 insertions(+), 34 deletions(-)

diff --git a/arch/arm64/boot/dts/compulab/ucm-imx95.dts b/arch/arm64/boot/dts/compulab/ucm-imx95.dts
index 2e514dacb964..4085e3e49e35 100644
--- a/arch/arm64/boot/dts/compulab/ucm-imx95.dts
+++ b/arch/arm64/boot/dts/compulab/ucm-imx95.dts
@@ -267,42 +267,18 @@ simple-audio-card,codec {
 	backlight: backlight {
 		compatible = "pwm-backlight";
 		pwms = <&tpm4 2 6666667 PWM_POLARITY_INVERTED>;
-		brightness-levels = <0 45 63 88 119 158 203 255>;
+		brightness-levels = <255 203 158 119 88 63 45 0>;
 		default-brightness-level = <6>;
 	};
 
 	lvds0_panel {
-		compatible = "simple-panel";
+		compatible = "boe,hv070wsa-100";
 		backlight = <&backlight>;
 		enable-gpios = <&pca9555 3 GPIO_ACTIVE_HIGH>;
-		display-timings {
-			native-mode = <&timing0>;
-			timing0: timing0 {
-				clock-frequency = <42105000>;
-				hactive = <1024>;
-				vactive = <600>;
-				hfront-porch = <30>;
-				hback-porch = <30>;
-				hsync-len = <30>;
-				vback-porch = <10>;
-				vfront-porch = <10>;
-				vsync-len = <10>;
-
-				hsync-active = <0>;
-				vsync-active = <0>;
-				de-active = <1>;
-				pixelclk-active = <0>;
-			};
-		};
-		ports {
-			#address-cells = <1>;
-			#size-cells = <0>;
-
-			port@0 {
-				reg = <0>;
-				panel_in: endpoint {
-					remote-endpoint = <&lvds0_out>;
-				};
+		status = "okay";
+		port {
+			panel_in: endpoint {
+				remote-endpoint = <&lvds0_out>;
 			};
 		};
 	};
@@ -1199,10 +1175,6 @@ &ldb0_phy {
 	status = "okay";
 };
 
-&ldb1_phy {
-	status = "okay";
-};
-
 &pixel_interleaver {
 	#address-cells = <1>;
 	#size-cells = <0>;
